{
    "compilerOptions": {
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "types": [ "node", "express", "dotenv", "mongodb" ],
        "target": "esnext",
        "suppressImplicitAnyIndexErrors": true,
        "allowJs": true,
        "jsx": "react",
        "alwaysStrict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "**/*.js",
        "**/node_modules",
        "**.d.ts"
    ]
}